{
  "name": "CAPRemoteServiceSample",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@graphql-tools/schema": "^8.3.2",
    "@sap/cds": "^5",
    "@sap/cds-odata-v2-adapter-proxy": "^1.8.9",
    "express": "^4",
    "express-graphql": "^0.12.0",
    "graphql": "^16.3.0"
  },
  "devDependencies": {
    "cds-swagger-ui-express": "^0.3.0",
    "sqlite3": "^5.0.2"
  },
  "scripts": {
    "start": "cds run"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "preview": {
      "ui5": {
        "version": "1.97.0",
        "theme": "sap_horizon"
      }
    },
    "features": {
      "graphql": true,
      "rest_new_adapter": true
    },
    "requires": {
      "API_BUSINESS_PARTNER": {
        "kind": "odata-v2",
        "model": "srv\\external\\API_BUSINESS_PARTNER",
        "[development]": {
          "credentials": {
            "url": "https://sandbox.api.sap.com/s4hanacloud/sap/opu/odata/sap/API_BUSINESS_PARTNER/"
          }
        },
        "[production]": {
          "destination": "TO_BE_DEFINED",
          "path": "/sap/opu/odata/sap/API_BUSINESS_PARTNER/"
        }
      },
      "OP_API_BUSINESS_PARTNER_SRV": {
        "kind": "odata-v2",
        "model": "srv\\external\\OP_API_BUSINESS_PARTNER_SRV",
        "[development]": {
          "credentials": {
            "url": "",
            "authentication": "BasicAuthentication"
          }
        },
        "[production]": {
          "destination": "TO_BE_DEFINED",
          "path": "/sap/opu/odata/sap/API_BUSINESS_PARTNER/ "
        }
      }
    }
  }
}
